<%= render partial: 'shared/userbar' %>

<div class="card-header d-flex justify-content-between">
  <div class="col-1">
    <%= link_to todo_lists_path, class: 'btn btn-dark' do %>
      <i class="fa-solid fa-chevron-left"></i>
    <% end %>
  </div>
  <h1 class="m-0 col-11 text-dark">Edit Todo List</h1>
</div>

<div class="card-body">
  <%= render 'edit', todo_list: @todo_list %>

  <%= link_to 'Show', @todo_list, class: 'btn btn-primary mt-2' %>
</div>

