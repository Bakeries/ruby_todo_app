<div class="card-header d-flex justify-content-between">
  <span>
    Todo Lists
  </span>
  <%= link_to 'New Todo List', new_todo_list_path, class: 'btn btn-primary btn-sm' %>
</div>

<div class="card-body">
  <ul class="list-group">
    <% @todo_lists.each do |todo_list| %>
      <li class="list-group-item d-flex justify-content-between">
        <%= link_to todo_list, class: "text-decoration-none" do %>
          <div>
            <h5 class="m-0 text-dark">
              <b><%= todo_list.title%></b>
              <span class="badge bg-<%= todo_list.badge_color %> rounded-pill">
            <%= todo_list.status %>
          </span>
            </h5>

            <p class="text-secondary m-0">
              <small>
                <%= todo_list.percent_complete %>% Complete (<%= todo_list.completed_items %>/<%= todo_list.total_items %> Todo Items)
              </small>
            </p>
          </div>
        <% end %>
        <div>
          <%= link_to 'Edit', edit_todo_list_path(todo_list), class: 'btn btn-secondary' %>
        </div>
      </li>
    <% end %>
  </ul>
</div>